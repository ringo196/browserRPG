{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jest": true

    },
    "extends": [
        "standard",
        "prettier",
        "prettier/standard",
        "plugin:jest/recommended"
    ],
    "plugins": [
        "import",
        "prettier",
        "standard",
        "jest"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "space-before-function-paren": 0,
        "new-cap": 0,
        "prettier/prettier": 2
    }

}